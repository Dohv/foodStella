<div class="row banner">
	<div class="col-md-4 tabs_left">
		<div class="button">Timeline</div>
		<div class="button">About</div>
		<div class="button selected">Recipes</div>
	</div>
	<div class="col-sm-12 col-md-4 user">
		<div class="user_pic"></div>
		<div class="user_name">Chris Roszell</div>
	</div>
	<div class="col-md-4 tabs_right">
		<div class="button">RECIPES<br><span> <%= @recipes.count %> </span></div>
		<div class="button">FRIENDS<br><span>23</span></div>
		<div class="button">FOLLOWERS<br><span>20</span></div>
	</div>
</div>

<div class="row">
	<div class="container wrapper-header">
		<div class="row">
			<h3>RECIPES</h3>
			<div class="search-box">
				<form><input type="text" placeholder="Search Recipes"></form>
			</div>
		</div>
	</div>
</div>



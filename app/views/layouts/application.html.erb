<!DOCTYPE html>
<html class="<%= 'hasFooter' if controller_name != 'sessions' %>">
<head>
  <title>FoodStella</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => false %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
 <!-- Added for collapsed navbar support -->
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

</head>

<style>
    <% if content_for?(:style) %>
      <%= yield(:style) %>
    <% end %>
</style>

<body class="<%= 'hasFooter' if @layout == true %>">

  <%- if @layout == true %>
    <%= render "layouts/navbar" %>
  <% end -%>

<div class="fluid-container <%= 'full-height' if !@layout %>">
  <%= yield %>
</div>

<%- if @layout == true %>
   <%= render "layouts/footer" %>
<% end -%>


</body>
</html>

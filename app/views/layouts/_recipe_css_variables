<% content_for(:style) do %>

  <% @recipes.each do |r| %>
    .<%= r.name %>-<%= r.id %> {
      background-image: url('<%= r.retrieve_pic %>'); 
    }
  <% end %>

  <% @events.each do |e| %>

   <% if e.get_recipe(e.recipe_id) %>
     .<%= e.recipe_name %>-<%= e.recipe_id %> {
       background-image: url('<%= e.get_recipe(e.recipe_id).retrieve_pic %>'); 
     }
    <% end %>
  <% end %>




  
     
  
<% end %>
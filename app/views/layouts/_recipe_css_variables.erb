<% content_for :style do %>

  <% @recipes.each do |recipe| %>
    .<%= recipe.get_friendly_name %>id-<%= recipe.id %> {
         background-image: url('<%= recipe.retrieve_pic %>') !important;
         cursor: pointer;
         background-size: cover;
    }
       .fc-event-container .<%= recipe.get_friendly_name %>id-<%= recipe.id %>::after {}
        .fc-event-container .<%= recipe.get_friendly_name %>id-<%= recipe.id %>::after {
          content: '<%= truncate(recipe.name, length: 20) %>';
          width: 100%;
          position: absolute;
          background-color: rgba(176, 176, 176, 0.65);
          text-align: center;
          bottom: 0;
          font-size: 1.2em;
          color: white;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
        }

        .fc-event-container .<%= recipe.get_friendly_name %>id-<%= recipe.id %>::before {
          content: 'Yields <%= recipe.servings %>';
          width: 100%;
          position: absolute;
          text-align: left;
          top: 0;
          left: 0;
          display: inline-block;
          font-size: 1.2em;
          color: white;
          font-weight: lighter;
          font-style: italic;
          white-space: nowrap;
          padding: 4px;
          letter-spacing: 1px;
          display: none;
        }

  <% end %>





  
     
  
<% end %>
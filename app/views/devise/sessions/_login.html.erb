<div id="sign-in-block">
  <div class="boxes"> 
    <div class="box">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>  
        <%- flash.each do |name, msg| -%> 
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) || :id != "Log in or sign up below to continue!" %>
      <%- end -%>  
    </div>
  </div>

  <div class="boxes">
     

      <div class="box" style="">
          <%= f.email_field :email, autofocus: false, placeholder: "Email", class: "input" %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "input" %>

          <div class="boxes">
            <div class="box">
               <div class="sub-box" style="text-align:right;">
               <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                <% end -%>
              </div>
               <div class="sub-box">
                <%= f.submit "Login", class: "login"%>
               </div>
               
            </div>
            <div class="box">
              <div class="sub-box">
                <%= link_to "CREATE AN ACCOUNT", new_registration_path(resource_name), class: 'btn btn-large' %>
               </div>
              <div class="sub-box">
                <%= link_to "Forgot password?", new_password_path(resource_name) %>
              </div>
            </div>
          </div>
      </div>
          
          <% end %>

     <div class="box" style="">
      <p>Don't have an account yet?</p>
      <%= link_to user_facebook_omniauth_authorize_path do %>
        <%= image_tag('log_in_with_facebook.png') %>
      <% end %>
    </div>
        

    </div>

</div>



  




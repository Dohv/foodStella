			<%= image_tag "icons/pork_green.png", class: "icon" %>
			<%= image_tag "icons/legumes_green.png", class: "icon" %>
			<%= image_tag "icons/soup_green.png", class: "icon" %>
			<%= image_tag "icons/chicken_green.png", class: "icon" %>
			<%= image_tag "icons/legumes_green.png", class: "icon" %>

<%= form_for_filterrific @filterrific do |f| %>
  <div>
    Search
    <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
    <%= f.text_field(
      :search_query,
      class: 'filterrific-periodically-observed'
    ) %>
  </div>
  <div>
    Sorted by
    <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by]) %>
  </div>
  <div id="ingredient-options">
    Sorted by
    <!-- f.select(:sort_by_ingredients, @filterrific.select_options[:sort_by_ingredients]) -->
    <% @filterrific.select_options[:sort_by_ingredients].each do |c| %>
       <label class="ingredient-option">
        <%= c[0] %>
        <%= check_box_tag("filterrific[sort_by_ingredients][]",c[1]) %>
      </label>
    <% end %>
  </div>
  <div>
    <%= link_to(
      'Reset filters',
      reset_filterrific_url,
    ) %>
  </div>
  <%# add an automated spinner to your form when the list is refreshed %>
  <%= render_filterrific_spinner %>
<% end %>


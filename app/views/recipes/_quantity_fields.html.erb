<li class="control-group nested-fields">
  <div class="controls">
  	<%= f.fields_for :ingredient do |quantity_ingredient| %>
      <!-- %= f.label :name, "Ingredient:" %> -->
      <%= quantity_ingredient.text_field :name, class: 'long', required: true %>
    <% end %>

    <%= f.label :amount, "Amount:" %>
    <%= f.text_field :amount, class: 'small', required: true %>
    <%= f.label :unit, "Unit" %>
     <%= f.select(:unit, options_for_select([ ['', nil], ['Cup', 1], ['Oz', 2], ["Tsp", 3], ["Tbsp", 4], ["Pinch", 5]], :selected => f.object.unit)) %>

    <%= link_to_remove_association "Remove", f %>
  </div>
</li>